{
  "manifest_version": 3,
  "name": "ChatGPT Memory Toolkit",
  "version": "1.0.0",
  "description": "Professional Chrome extension for exporting ChatGPT memories with multiple formats and advanced features",
  "author": "ChatGPT Memory Toolkit Team",
  "homepage_url": "https://github.com/chatgpt-memory-toolkit/extension",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "contextMenus",
    "downloads"
  ],
  
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  
  "background": {
    "service_worker": "src/scripts/background.js",
    "type": "module"
  },
  
  "content_scripts": [{
    "matches": [
      "https://chatgpt.com/*",
      "https://chat.openai.com/*"
    ],
    "js": ["src/scripts/content.js"],
    "run_at": "document_end"
  }],
  
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_title": "ChatGPT Memory Toolkit - Professional Memory Export",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "web_accessible_resources": [{
    "resources": [
      "assets/icons/*",
      "assets/images/*",
      "src/constants/*",
      "src/utils/*"
    ],
    "matches": [
      "https://chatgpt.com/*",
      "https://chat.openai.com/*"
    ]
  }],
  
  "commands": {
    "export-memories": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Quick export ChatGPT memories"
    }
  },
  
  "options_page": "src/ui/options.html",
  
  "minimum_chrome_version": "88"
}